# Production Environment Configuration Template
# Copy this to .env.production and fill in real values
# DO NOT commit .env.production with real secrets!

NODE_ENV=production
PORT=3001
HOST=0.0.0.0

# Database (PostgreSQL)
DATABASE_URL=postgresql://prod_user:SECURE_PASSWORD@prod-db-host:5432/mission_control_production
DATABASE_SSL=true
DATABASE_POOL_SIZE=10

# Authentication (GENERATE SECURE KEYS!)
# Use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=GENERATE_SECURE_256_BIT_KEY_HERE
JWT_EXPIRES_IN=7d
SESSION_SECRET=GENERATE_SECURE_SESSION_KEY_HERE

# OAuth (Production Keys - GET FROM PROVIDERS)
GOOGLE_CLIENT_ID=YOUR_PRODUCTION_GOOGLE_CLIENT_ID
GOOGLE_CLIENT_SECRET=YOUR_PRODUCTION_GOOGLE_CLIENT_SECRET
GITHUB_CLIENT_ID=YOUR_PRODUCTION_GITHUB_CLIENT_ID
GITHUB_CLIENT_SECRET=YOUR_PRODUCTION_GITHUB_CLIENT_SECRET
APPLE_CLIENT_ID=YOUR_PRODUCTION_APPLE_CLIENT_ID
APPLE_PRIVATE_KEY_PATH=./keys/apple_private_key_prod.p8
APPLE_KEY_ID=YOUR_PRODUCTION_APPLE_KEY_ID
APPLE_TEAM_ID=YOUR_PRODUCTION_APPLE_TEAM_ID

# OpenClaw Integration (Production)
OPENCLAW_DEFAULT_ENDPOINT=https://api.openclaw.ai
OPENCLAW_WEBHOOK_SECRET=GENERATE_SECURE_WEBHOOK_SECRET

# Security (Strict Production Settings)
ALLOWED_ORIGINS=https://missioncontrol.emmanuelmiller.com,https://app.missioncontrol.io
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging & Monitoring (Production Services)
LOG_LEVEL=info
LOG_FORMAT=json
SENTRY_DSN=https://YOUR_PRODUCTION_SENTRY_DSN

# Security Headers & SSL
FORCE_HTTPS=true
TRUST_PROXY=true
HSTS_MAX_AGE=31536000

# Features (Production Hardened)
ENABLE_API_DOCS=false
ENABLE_DEBUG_ROUTES=false
HOT_RELOAD=false

# Backup & Maintenance
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
MAINTENANCE_WINDOW=0 3 * * 0  # Sunday at 3 AM

# Performance
CACHE_TTL=3600  # 1 hour
COMPRESSION=true
KEEP_ALIVE_TIMEOUT=65000

# Instructions for setup:
# 1. Copy this file to .env.production
# 2. Generate secure secrets using crypto.randomBytes()
# 3. Set up OAuth applications with production redirect URLs
# 4. Configure PostgreSQL database with proper user/permissions
# 5. Set up monitoring services (Sentry, logging)
# 6. Never commit .env.production to version control!