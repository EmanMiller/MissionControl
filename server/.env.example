# Server Configuration
NODE_ENV=development
# Use 3002 if 3001 is in use (e.g. OpenClaw). Then set frontend VITE_API_URL=http://localhost:3002/api
PORT=3001
FRONTEND_URL=http://localhost:5173
PUBLIC_URL=http://localhost:3001

# Authentication Mode
# Set to 'local' for instant development (no OAuth setup required)
# Set to 'oauth' for production with Google/GitHub/Apple auth
AUTH_MODE=local

# Demo Auth (for local development - allows /auth/demo endpoint)
ALLOW_DEMO_AUTH=1

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# OAuth Configuration - GitHub
GITHUB_CLIENT_ID=your_github_oauth_app_client_id
GITHUB_CLIENT_SECRET=your_github_oauth_app_client_secret
GITHUB_REDIRECT_URI=http://localhost:5173/auth/github/callback

# OAuth Configuration - Google
GOOGLE_CLIENT_ID=your_google_oauth_client_id.apps.googleusercontent.com

# OAuth Configuration - Apple
APPLE_CLIENT_ID=com.your.app.serviceid
APPLE_TEAM_ID=your_apple_team_id
APPLE_KEY_ID=your_apple_key_id

# Database
DATABASE_PATH=./mission-control.db

# OpenClaw Default Configuration
DEFAULT_OPENCLAW_ENDPOINT=http://localhost:18789