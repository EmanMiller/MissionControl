# Staging Environment Configuration
NODE_ENV=staging
PORT=3001
HOST=0.0.0.0

# Database (PostgreSQL)
DATABASE_URL=postgresql://staging_user:staging_password@staging-db-host:5432/mission_control_staging
DATABASE_SSL=true
DATABASE_POOL_SIZE=5

# Authentication (Use production-like keys)
JWT_SECRET=CHANGE_THIS_STAGING_JWT_SECRET_256_BITS_MINIMUM
JWT_EXPIRES_IN=7d
SESSION_SECRET=CHANGE_THIS_STAGING_SESSION_SECRET

# OAuth (Staging Keys - DO NOT COMMIT REAL VALUES)
GOOGLE_CLIENT_ID=staging_google_client_id
GOOGLE_CLIENT_SECRET=staging_google_client_secret
GITHUB_CLIENT_ID=staging_github_client_id
GITHUB_CLIENT_SECRET=staging_github_client_secret
APPLE_CLIENT_ID=staging_apple_client_id
APPLE_PRIVATE_KEY_PATH=./keys/apple_private_key_staging.p8
APPLE_KEY_ID=staging_apple_key_id
APPLE_TEAM_ID=staging_apple_team_id

# OpenClaw Integration (Staging)
OPENCLAW_DEFAULT_ENDPOINT=https://staging-api.openclaw.ai
OPENCLAW_WEBHOOK_SECRET=CHANGE_THIS_STAGING_WEBHOOK_SECRET

# Security (Production-like but more permissive)
ALLOWED_ORIGINS=https://staging.missioncontrol.emmanuelmiller.com,https://localhost:5173
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=200

# Logging & Monitoring
LOG_LEVEL=info
LOG_FORMAT=json
SENTRY_DSN=https://your_sentry_dsn_for_staging

# Features
ENABLE_API_DOCS=true
ENABLE_DEBUG_ROUTES=false
HOT_RELOAD=false

# SSL & Security Headers
FORCE_HTTPS=true
TRUST_PROXY=true