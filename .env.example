# OAuth — copy this file to .env.local and fill in your values
# .env.local is gitignored and will never be committed

# API Configuration (use 3002 if backend runs on 3002, e.g. when OpenClaw uses 3001)
VITE_API_URL=http://localhost:3001/api

# Authentication Mode
# Set to 'local' for instant development (no OAuth setup required)
# Set to 'oauth' for production with Google/GitHub/Apple auth
VITE_AUTH_MODE=local

# Development Mode (legacy - use VITE_AUTH_MODE instead)
VITE_DEV_MODE=true

# Google OAuth (https://console.cloud.google.com → APIs & Services → Credentials)
# Create OAuth 2.0 Client ID (Web application). In "Authorized JavaScript origins" add:
#   http://localhost:5173  and  http://127.0.0.1:5173  (exact URL must match; 403 = origin not allowed)
# VITE_GOOGLE_CLIENT_ID=your_real_google_client_id.apps.googleusercontent.com

# Apple Sign In (https://developer.apple.com)
VITE_APPLE_CLIENT_ID=com.your.app.serviceid

# GitHub OAuth (https://github.com/settings/developers)
VITE_GITHUB_CLIENT_ID=your_github_client_id_here
